<div class="max-w-2xl mx-auto p-6 bg-gray-800 rounded-lg shadow-lg">
  <h1 class="text-4xl font-bold text-white mb-4"><%= @article.name %></h1>

  <p class="text-gray-300 mb-2">
    <strong class="text-purple-400">Article Number:</strong>
    <span class="text-gray-200"><%= @article.article_number %></span>
  </p>
  
  <p class="text-gray-300 mb-2">
    <strong class="text-purple-400">Article Text:</strong>
    <span class="text-gray-200"><%= @article.article_text %></span>
  </p>
  
  <p class="text-gray-300 mb-2">
    <strong class="text-purple-400">Weight (kg):</strong>
    <span class="text-gray-200"><%= @article.weight %></span>
  </p>

  <div class="mt-6 flex space-x-4">
    <%= link_to 'Edit', edit_article_path(@article), class: 'bg-purple-500 hover:bg-purple-600 text-white font-semibold py-2 px-4 rounded transition duration-200' %>
    <%= link_to 'Back to Articles', articles_path, class: 'bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded transition duration-200' %>
  </div>
</div>