<h1 class="text-3xl font-bold text-white mb-4 mt-6 px-8">Employees</h1>

<div class="overflow-x-auto px-8">
  <table class="min-w-full bg-gray-800 rounded-2xl overflow-hidden">
    <thead>
      <tr class="bg-gray-700 text-purple-300">
        <th class="py-3 px-8 text-left">First Name</th>
        <th class="py-3 px-8 text-left">Last Name</th>
        <th class="py-3 px-8 text-left">Address</th>
        <th class="py-3 px-8 text-left">City</th>
        <th class="py-3 px-8 text-left">Postal Code</th>
        <th class="py-3 px-8 text-left">Email</th>
        <th class="py-3 px-8 text-left">Role</th>
        <th class="py-3 px-8 text-left">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr class="text-gray-300 hover:bg-gray-700">
          <td class="py-3 px-8 text-left"><%= employee.first_name %></td>
          <td class="py-3 px-8 text-left"><%= employee.last_name %></td>
          <td class="py-3 px-8 text-left"><%= employee.address %></td>
          <td class="py-3 px-8 text-left"><%= employee.city %></td>
          <td class="py-3 px-8 text-left"><%= employee.postal_code %></td>
          <td class="py-3 px-8 text-left"><%= employee.email %></td>
          <td class="py-3 px-8 text-left"><%= employee.role.humanize %></td>
          <td class="py-3 px-8 text-left flex space-x-2">
            <%= link_to 'Show', employee_path(employee), class: 'text-purple-400 hover:text-purple-300 font-semibold' %>
            <%= link_to 'Delete', employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:text-red-400 font-semibold' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if @employees.empty? %>
  <p class="text-gray-300 px-8">No employees found.</p>
<% end %>