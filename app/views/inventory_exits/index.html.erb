<h1 class="text-3xl font-bold text-white mb-6 mt-6 px-8">Inventory Exits</h1>

<div class="flex justify-between items-center mb-4 px-8">
  <%= link_to raw('<span class="material-icons align-middle">add</span><span class="ml-2">New Inventory Exit</span>'), new_inventory_exit_path, class: 'flex items-center bg-purple-600 text-white py-2 px-4 rounded hover:bg-purple-700 transition duration-200' %>
</div>

<div class="overflow-x-auto px-8">
  <table class="min-w-full bg-gray-800 rounded-lg overflow-hidden shadow-lg"> <!-- Changed to rounded-lg -->
    <thead>
      <tr class="bg-gray-700 text-purple-300">
        <th class="py-3 px-8 text-left">Article</th>
        <th class="py-3 px-8 text-left">Employee</th>
        <th class="py-3 px-8 text-left">Quantity</th>
        <th class="py-3 px-8 text-left">Exit Date</th>
      </tr>
    </thead>
    <tbody>
      <% @inventory_exits.each do |exit| %>
        <tr class="text-gray-300 hover:bg-gray-700">
          <td class="py-3 px-8 text-left"><%= exit.article.name %></td>
          <td class="py-3 px-8 text-left"><%= exit.employee.last_name %></td>
          <td class="py-3 px-8 text-left"><%= exit.quantity %></td>
          <td class="py-3 px-8 text-left"><%= exit.exit_date.strftime('%Y-%m-%d') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>