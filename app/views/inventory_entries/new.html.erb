<div class="flex items-center justify-center h-screen bg-gray-800">
  <div class="w-full max-w-lg bg-gray-900 p-8 rounded-lg shadow-md">
    <h1 class="text-3xl font-bold text-white text-center mb-6">Create New Inventory Entry</h1>

    <%= form_with(model: @inventory_entry, local: true) do |form| %>
      <div class="mb-4">
        <%= form.label :article_id, 'Article', class: "text-gray-300" %>
        <%= form.collection_select :article_id, Article.all, :id, :name, {}, 
          class: "mt-1 block w-full bg-gray-700 text-white border border-gray-600 rounded-lg shadow-sm focus:ring focus:ring-purple-300" %>
      </div>

      <div class="mb-4">
        <%= form.label :employee_id, 'Employee', class: "text-gray-300" %>
        <%= form.collection_select :employee_id, Employee.all, :id, :last_name, {}, 
          class: "mt-1 block w-full bg-gray-700 text-white border border-gray-600 rounded-lg shadow-sm focus:ring focus:ring-purple-300" %>
      </div>

      <div class="mb-4">
        <%= form.label :quantity, class: "text-gray-300" %>
        <%= form.number_field :quantity, min: 1, 
          class: "mt-1 block w-full bg-gray-700 text-white border border-gray-600 rounded-lg shadow-sm focus:ring focus:ring-purple-300" %>
      </div>

      <div class="mb-4">
        <%= form.label :entry_date, class: "text-gray-300" %>
        <%= form.date_field :entry_date, 
          class: "mt-1 block w-full bg-gray-700 text-white border border-gray-600 rounded-lg shadow-sm focus:ring focus:ring-purple-300" %>
      </div>

      <%= form.submit 'Create Inventory Entry', 
        class: "mt-6 bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded w-full transition" %>
    <% end %>
  </div>
</div>
